@model ProAspNetCoreMvcModelBinding.Models.Pessoa
@{ Layout = "_Layout"; }

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
    </head>
    <body>
        <div class="bg-primary panel-body"><h2>Pessoa</h2></div>
        <table class="table table-condensed table-bordered table-striped">
            <tr><th>ID:</th><td>@Model.PessoaId</td></tr>
            <tr><th>Nome:</th><td>@Model.Nome</td></tr>
            <tr><th>Sobrenome:</th><td>@Model.Sobrenome</td></tr>
            <tr><th>Permissão:</th><td>@Model.Permissao</td></tr>
            <tr><th>Cidade:</th><td>@Model.EnderecoCasa?.Cidade</td></tr>
            <tr><th>País:</th><td>@Model.EnderecoCasa?.Pais</td></tr>
        </table>
    </body>
    </html>
